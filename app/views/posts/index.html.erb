<h1>Listing posts</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Body</th>
    <th>Sent by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.subject %></td>
    <td><%= post.body %></td>
    <td><%= post.sent_by %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(1) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

